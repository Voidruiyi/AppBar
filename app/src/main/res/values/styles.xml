    <style name="FullBleedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme" parent="FullBleedTheme">
        <item name="appbarStyle">@style/AppbarStyle</item>
    </style>



    <style name="AppbarStyle">
        <item name="title_text_color">@color/colorAccent</item>
        <item name="right_text_color">@color/colorAccent</item>
        <item name="child_visible">LI|TT|RT</item>
        <item name="left_image">@drawable/icon_plan_title_back</item>
        <item name="title_text_size">17.0sp</item>
        <item name="android:background">@drawable/bg_appbar_main</item>
    </style>

    <style name="appbar_left_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">42dip</item>
        <item name="android:maxHeight">42dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="appbar_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="appbar_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">8</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="appbar_right_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">42dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:maxHeight">42dip</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="appbar_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginRight">@dimen/space_px_20</item>
    </style>

</resources>
